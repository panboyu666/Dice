<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pan.bu.yu.MainActivity1_1"
    android:background="@drawable/x07"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/or" >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/one"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="30dp"
            />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/one"
            android:layout_toRightOf="@id/gif1"
            android:layout_marginTop="30dp"
            />

        <Button
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttonb"
            android:text="擲骰子"
            android:onClick="roll_method"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即將生成你的人物"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:textSize="30dp"
            android:fontFamily="@font/cfont"

            />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:fontFamily="@font/cfont"
            />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/viewGif"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"

            />

        <Button
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="110dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttonb"
            android:onClick="nextMethod"
            android:text="確定" />

    </RelativeLayout>

</RelativeLayout>