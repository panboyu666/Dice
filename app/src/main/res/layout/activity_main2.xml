<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:background="@drawable/background3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/npc"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"

            android:src="@drawable/npc1" />

        <Button
            android:id="@+id/button"
            style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttonbackground"
            android:onClick="method"
            android:text="ROLL"
            android:textColor="@color/white"
            android:textSize="40dp" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/button"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="77dp"
            app:srcCompat="@drawable/gold"
            android:onClick="methodaddGold"
            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_above="@id/button"
            android:layout_marginBottom="57dp"
            android:layout_toRightOf="@id/imageView4"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/gold66"
            android:onClick="methodaddGold2"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="77dp"
            android:layout_height="80dp"
            android:layout_above="@id/button"
            android:layout_marginBottom="52dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageView5"
            app:srcCompat="@drawable/money"
            android:onClick="methodaddGold3"/>

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/imageView7"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_above="@id/button"
            android:layout_marginBottom="62dp"
            android:layout_toRightOf="@id/imageView6"
            app:srcCompat="@drawable/money2"
            android:onClick="methodaddGold4"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView8"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_above="@id/button"
            android:layout_marginBottom="62dp"
            android:layout_toRightOf="@id/imageView7"
            app:srcCompat="@drawable/money3"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="method02"
            android:text=""
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="result"
            android:text=""
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="160dp"
            android:orientation="horizontal">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/one" />

            <pl.droidsonroids.gif.GifImageView

                android:id="@+id/gif2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/one" />

            <pl.droidsonroids.gif.GifImageView

                android:id="@+id/gif3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/one" />

            <pl.droidsonroids.gif.GifImageView

                android:id="@+id/gif4"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/one" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="莊家點數"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/button"
            android:layout_marginBottom="160dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="64dp"
                android:layout_marginBottom="150dp"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif11"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/one" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/gif22"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/one" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/gif33"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/one" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/gif44"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/one" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            android:text="點數"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/textbet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="240dp"
            android:text="投注金額:0元"
            android:textColor="#FFDC35"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"

            android:layout_marginBottom="320dp"
            android:text=""
            android:textColor="#FFDC35"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:text="錢包:"
            android:textColor="#FFFF93"
            android:textSize="20dp"
            android:textStyle="italic"
            />

                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="290dp"
                    android:layout_above="@id/button"
                    >

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="280dp"
                        android:layout_height="200dp">



                    </RelativeLayout>

                </FrameLayout>












    </RelativeLayout>


</LinearLayout>







